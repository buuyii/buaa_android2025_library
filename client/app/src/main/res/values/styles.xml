<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_200</item>
    </style>

    <!-- Style for the seat buttons on the map -->
    <style name="SeatButtonStyle" parent="Widget.AppCompat.Button.Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/seat_button_background</item>
    </style>

</resources>