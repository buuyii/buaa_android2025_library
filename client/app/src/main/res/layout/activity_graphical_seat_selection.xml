<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphicalSeatSelectionActivity">

    <TextView
        android:id="@+id/floor_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="楼层座位图"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> <!-- Background Image and Seats Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/seat_map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floor_title_text"> <!-- SEAT LAYOUT AREA --> <!-- Buttons are now direct children of ConstraintLayout. --> <!-- You can drag them in the design editor, and their position is defined by bias constraints. -->
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/floor_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/library_floor_plan"
            tools:ignore="ContentDescription"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="0dp" />
        <com.example.client.SeatOverlayView
            android:id="@+id/seat_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>