<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF0F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="输入书名或作者"
            app:startIconDrawable="@drawable/ic_search"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="3">

            <Button
                android:id="@+id/search_history_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="搜索记录"
                android:backgroundTint="@color/blue_500"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/favorite_books_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="收藏图书"
                android:backgroundTint="@color/blue_500"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/book_categories_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="图书分类"
                android:backgroundTint="@color/blue_500"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

        <!-- 热门图书 -->
        <TextView
            android:id="@+id/hot_books_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="热门图书"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue_500"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/blue_500" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hot_books_recycler"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:nestedScrollingEnabled="false" />
        </androidx.cardview.widget.CardView>

        <!-- 新书速递 -->
        <TextView
            android:id="@+id/new_books_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新书速递"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue_500"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/blue_500" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/new_books_recycler"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:nestedScrollingEnabled="false" />
        </androidx.cardview.widget.CardView>

        <!-- 馆藏推荐 -->
        <TextView
            android:id="@+id/recommended_books_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="馆藏推荐"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue_500"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/blue_500" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommended_books_recycler"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:nestedScrollingEnabled="false" />
        </androidx.cardview.widget.CardView>

        <!-- 图书列表（默认隐藏，仅在搜索时显示） -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/books_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>